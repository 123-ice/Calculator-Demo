<Page x:Class="CalculatorApp.GraphingSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      DataContextChanged="GraphingCalculator_DataContextChanged"
      Loaded="OnLoaded"
      mc:Ignorable="d">
    <Page.Resources>
        <SolidColorBrush x:Key="ListMediumControlBackgroundBrush" Color="{StaticResource SystemListMediumColor}"/>
        <SolidColorBrush x:Key="ControlPointerOverBorderBrush" Color="LightGray"/>
        <SolidColorBrush x:Key="ControlSelectedBackgroundBrush" Color="LightGray"/>
        <SolidColorBrush x:Key="BaseMediumLowPressedBackgroundBrush" Color="{StaticResource SystemBaseMediumLowColor}"/>
        <SolidColorBrush x:Key="ChromeWhiteHighControlSelectedForegroundBrush" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="BackgroundColorBrush" Color="CornflowerBlue"/>
        <SolidColorBrush x:Key="ForegroundColorBrush" Color="White"/>

        <Style x:Key="FilterRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="MinHeight" Value="44"/>
            <Setter Property="MinWidth" Value="0"/>
            <Setter Property="Padding" Value="4,4"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="FocusVisualMargin" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid Name="LayoutRoot"
                              Margin="0,0"
                              Background="{ThemeResource RadioButtonBackground}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="PointerOver">
                                        <VisualState.Setters>
                                            <Setter Target="LayoutRoot.Background" Value="{ThemeResource ListMediumControlBackgroundBrush}"/>
                                            <Setter Target="AccessibilityBorder.BorderBrush" Value="{ThemeResource ControlPointerOverBorderBrush}"/>
                                            <Setter Target="AccessibilityBorder.Background" Value="{ThemeResource ControlSelectedBackgroundBrush}"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Target="LayoutRoot.Background" Value="{ThemeResource BaseMediumLowPressedBackgroundBrush}"/>
                                            <Setter Target="AccessibilityBorder.BorderBrush" Value="{ThemeResource ControlPointerOverBorderBrush}"/>
                                            <Setter Target="AccessibilityBorder.Background" Value="{ThemeResource ControlSelectedBackgroundBrush}"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="CheckStates">
                                    <VisualState x:Name="Checked">
                                        <VisualState.Setters>
                                            <Setter Target="VisualBorder.BorderBrush" Value="{ThemeResource BackgroundColorBrush}"/>
                                            <Setter Target="VisualBorder.Background" Value="{ThemeResource BackgroundColorBrush}"/>
                                            <Setter Target="ContentPresenter.Background" Value="{ThemeResource BackgroundColorBrush}"/>
                                            <Setter Target="ContentPresenter.Foreground" Value="{ThemeResource ForegroundColorBrush}"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Unchecked"/>
                                    <VisualState x:Name="Indeterminate"/>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Border Name="AccessibilityBorder"
                                    BorderBrush="{ThemeResource RadioButtonBorderBrush}"
                                    BorderThickness="1"/>
                            <Border Name="VisualBorder"
                                    BorderBrush="{ThemeResource RadioButtonBorderBrush}"
                                    BorderThickness="1"/>
                            <ContentPresenter Name="ContentPresenter"
                                              Grid.Column="1"
                                              Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Foreground="{TemplateBinding Foreground}"
                                              AutomationProperties.AccessibilityView="Raw"
                                              Content="{TemplateBinding Content}"
                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                              ContentTransitions="{TemplateBinding ContentTransitions}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <StackPanel Margin="10,10,10,10">
            <TextBlock x:Name="GridHeading"
                       x:Uid="GridHeading"
                       FontSize="28"
                       Text="Grid_d"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition MinHeight="30"/>
                    <RowDefinition MinHeight="40"/>
                    <RowDefinition MinHeight="20"/>
                    <RowDefinition MinHeight="30"/>
                    <RowDefinition MinHeight="40"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="70"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="x_MinHeading"
                           x:Uid="x_MinHeading"
                           Grid.Row="0"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Text="x-min_d"/>
                <TextBlock x:Name="x_MaxHeading"
                           x:Uid="x_MaxHeading"
                           Grid.Row="0"
                           Grid.Column="1"
                           VerticalAlignment="Center"
                           Text="x-max_d"/>

                <TextBox x:Name="x_Min"
                         Grid.Row="1"
                         Grid.Column="0"
                         VerticalAlignment="Center"
                         KeyDown="OnKeyDown"
                         LosingFocus="OnLosingFocus"/>
                <TextBox x:Name="x_Max"
                         Grid.Row="1"
                         Grid.Column="1"
                         VerticalAlignment="Center"
                         KeyDown="OnKeyDown"
                         LosingFocus="OnLosingFocus"/>

                <TextBlock x:Name="y_MinHeading"
                           x:Uid="y_MinHeading"
                           Grid.Row="3"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Text="y-min_d"/>
                <TextBlock x:Name="y_MaxHeading"
                           x:Uid="y_MaxHeading"
                           Grid.Row="3"
                           Grid.Column="1"
                           VerticalAlignment="Center"
                           Text="y-max_d"/>

                <TextBox x:Name="y_Min"
                         Grid.Row="4"
                         Grid.Column="0"
                         VerticalAlignment="Center"
                         KeyDown="OnKeyDown"
                         LosingFocus="OnLosingFocus"/>
                <TextBox x:Name="y_Max"
                         Grid.Row="4"
                         Grid.Column="1"
                         VerticalAlignment="Center"
                         KeyDown="OnKeyDown"
                         LosingFocus="OnLosingFocus"/>

                <Polyline Grid.RowSpan="5"
                          Grid.Column="2"
                          Stroke="Blue"
                          StrokeThickness="3"
                          Points="0,50 50,50 50,65"/>
                <Polyline Grid.RowSpan="5"
                          Grid.Column="2"
                          Stroke="Blue"
                          StrokeThickness="3"
                          Points="50,115 50,140 0,140"/>

                <Button x:Name="PreserveAspectRatio"
                        Grid.RowSpan="5"
                        Grid.Column="2"
                        Margin="30,20,0,0"
                        VerticalAlignment="Center"
                        Click="OnPreserveAspectRatioClicked">
                    <FontIcon x:Name="PreserveAspectRatioSymbol"
                              FontFamily="Segoe UI Symbol"
                              Glyph="&#x26D3;"/>
                </Button>

            </Grid>

            <TextBlock x:Name="UnitsHeading"
                       x:Uid="UnitsHeading"
                       Margin="0,10"
                       FontSize="28"
                       Text="Units_d"/>

            <StackPanel Orientation="Horizontal">
                <RadioButton x:Name="Radians"
                             x:Uid="TrigModeRadians"
                             Style="{StaticResource FilterRadioButtonStyle}"
                             Click="TrigUnitModeClick"
                             Content="Radians_d"
                             IsChecked="True"/>
                <RadioButton x:Name="Degrees"
                             x:Uid="TrigModeDegrees"
                             Style="{StaticResource FilterRadioButtonStyle}"
                             Click="TrigUnitModeClick"
                             Content="Degrees_d"/>
                <RadioButton x:Name="Gradians"
                             x:Uid="TrigModeGradians"
                             Style="{StaticResource FilterRadioButtonStyle}"
                             Click="TrigUnitModeClick"
                             Content="Gradians_d"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
